{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build philosopher",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/philo/*.c",
                "${workspaceFolder}/philo/linked_list/*.c",
                // "${workspaceFolder}/*/*/*.c",
                // "${workspaceFolder}/tester/Unity-master/src/unity.c",
                //"-Ofast",
                "-Wall",
                "-Wextra",
                "-Werror",
                //"-fsanitize=address",
                "-o",
                "${workspaceFolder}/philo/philosopher"
            ],
            "options": {
                "cwd": "${workspaceFolder}/philo"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}