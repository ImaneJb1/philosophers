{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/philo/philosopher",
            "args": ["4", "800", "200", "200"],

            // "program": "valgrind",
            // "args": ["${workspaceFolder}/a.out"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/philo",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build philosopher"
        }
    ]
}